@{
    ViewData["Title"] = "Home Admin";
}

<h1 class="text-center text-primary">MyPosGift</h1>
<h2 class="text-center text-primary">Welcome Admin - @this.User.Identity.Name</h2>

<div class="row d-flex justify-content-center">
    <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-users fa-5x"></i>
            </div>
         <div class="card-body">
                <h2 class="card-title text-center">Users</h2>
                <a asp-area="Identity" asp-controller="Users" asp-action="All" class="btn btn-primary">All Users</a>
         </div>
       </div>
    </div>
     <div class="col-md-3">
        <div class="card text-center" style="width: 16rem;">
            <div class="text-center">
                <i class="fas fa-archway fa-5x"></i>
            </div>
            <div class="card-body">
                <h2 class="card-title text-center">Dashboard</h2>
                <a asp-area="" asp-controller="Dashboard" asp-action="All" class="btn btn-primary">Dashboard</a>
            </div>
        </div>
    </div>
</div>